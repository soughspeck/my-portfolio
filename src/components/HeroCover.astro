---
export interface Props {
  image: string;
  alt?: string;
  title?: string;
  subtitle?: string;
  overlay?: boolean;
}

const { image, alt = "", title, subtitle, overlay = true } = Astro.props;
---

<style>
  .hero-section {
    position: relative;
    width: 100vw;
    height: 80vh; /* Adjust height as needed */
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    color: white;
  }

  .hero-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5); /* Dark overlay */
  }

  .hero-content {
    position: relative;
    z-index: 2;
  }

  .hero-title {
    font-size: 3rem;
    font-weight: bold;
  }

  .hero-subtitle {
    font-size: 1.5rem;
    margin-top: 0.5rem;
  }
</style>

<section class="hero-section">
  <img class="hero-image" src={image} alt={alt} />

  {overlay && <div class="hero-overlay"></div>}

  {title && (
    <div class="hero-content">
      <h1 class="hero-title">{title}</h1>
      {subtitle && <p class="hero-subtitle">{subtitle}</p>}
    </div>
  )}
</section>