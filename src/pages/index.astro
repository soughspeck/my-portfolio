        <div style="background: url('assets/nli-search-redesign.jpeg') no-repeat center center; background-size: cover; width: 100%; height: 100%; min-height: 400px; border-radius: 8px;">
      </div>
    </section>

    <script>
    document.addEventListener('DOMContentLoaded', function() {
  // Select elements by their specific classes
  const heroElements = document.querySelectorAll('.hero');
  const caseStudyElements = document.querySelectorAll('.section-case-study:not(.reverse)');
  const caseStudyReverseElements = document.querySelectorAll('.section-case-study.reverse');
  
  // Function to set initial state
  const setInitialState = (elements) => {
    elements.forEach(element => {
      element.style.opacity = '0';
      element.style.transform = 'translateY(24px)';
      element.style.transition = 'opacity 1s ease-in-out, transform 1s ease-in-out';
    });
  };
  
  // Function to animate elements
  const animateElements = (elements, startDelay) => {
    elements.forEach((element, index) => {
      setTimeout(() => {
        element.style.opacity = '1';
        element.style.transform = 'translateY(0)';
      }, startDelay + (index * 50)); // Base delay + 50ms between each element
    });
  };
  
  // Set initial state for all elements
  setInitialState(heroElements);
  setInitialState(caseStudyElements);
  setInitialState(caseStudyReverseElements);
  
  // Small delay to ensure styles are applied before animation starts
  setTimeout(() => {
    // First animate hero elements
    animateElements(heroElements, 0);
    
    // Then animate case study elements (after all hero elements)
    const caseStudyDelay = heroElements.length * 50 + 200; // Add extra 200ms between groups
    animateElements(caseStudyElements, caseStudyDelay);
    
    // Finally animate case study reverse elements
    const reverseDelay = caseStudyDelay + caseStudyElements.length * 50 + 200;
    animateElements(caseStudyReverseElements, reverseDelay);
  }, 100);
});
        </script>
        
    

  </main>
  
